using System;
using System.Collections.Generic;
using NHibernate;
using Shared.NHibernateDAL;

namespace Marinha.Business
{
	[Serializable]
    public partial class SubTipoEquipamento : BusinessObject<SubTipoEquipamento>, IDescricao, IComparable<SubTipoEquipamento>	
	{
		#region Private Members
		private TipoEquipamento _tipoequipamento; 
		private string _descricao; 
		private bool _flagativo;
	    private bool _flagProgem;
	    
		#endregion
		
		#region Default ( Empty ) Class Constuctor
		/// <summary>
		/// default constructor
		/// </summary>
		public SubTipoEquipamento()
		{
			_tipoequipamento =  null; 
			_descricao = null; 
			_flagativo = false; 
		}
		#endregion // End of Default ( Empty ) Class Constuctor

		#region Public Properties
			
		/// <summary>
		/// 
		/// </summary>		
		public virtual TipoEquipamento TipoEquipamento
		{
			get { return _tipoequipamento; }
			set { _tipoequipamento = value; }
		}
			
		/// <summary>
		/// 
		/// </summary>		
		public virtual string Descricao
		{
			get { return _descricao; }
			set	
			{
				if ( value != null )
					if( value.Length > 50)
						throw new ArgumentOutOfRangeException("Invalid value for Descricao", value, value.ToString());
				
				_descricao = value;
			}
		}
			
		/// <summary>
		/// 
		/// </summary>		
		public virtual bool FlagAtivo
		{
			get { return _flagativo; }
			set { _flagativo = value; }
		}

        public virtual bool FlagProgem
        {
            get { return _flagProgem; }
            set { _flagProgem = value; }
        }
		#endregion 
		
		
		#region Public Methods
		
		public static Dictionary<int, string> List(int id_tipoEquipamento)
		{
			ISession session = NHibernateSessionManager.Instance.GetSession();
			IQuery query = session.CreateQuery(
            @"select s.ID, s.Descricao 
			from SubTipoEquipamento s  
			where s.FlagAtivo = 1
			and s.TipoEquipamento.ID = IsNull(:id_tipoEquipamento, s.TipoEquipamento.ID)
			order by s.Descricao");

		    query.SetParameter("id_tipoEquipamento", BusinessHelper.IsNullOrZero(id_tipoEquipamento), NHibernateUtil.Int32);
			return BusinessHelper.ExecuteList(query); 
		}
		
		public static List<SubTipoEquipamento> Select()
		{
			ISession session = NHibernateSessionManager.Instance.GetSession();
			IQuery query = session.CreateQuery(
			@"from SubTipoEquipamento s inner join fetch s.TipoEquipamento t 			
			order by s.Descricao");
		
			return (List<SubTipoEquipamento>)query.List<SubTipoEquipamento>();
		}
		
		#endregion

	    public int CompareTo(SubTipoEquipamento other)
	    {
	        return _descricao.CompareTo(other.Descricao);
	    }

        public override string ToString()
        {
            return _descricao.ToString();
        }
	}
}
