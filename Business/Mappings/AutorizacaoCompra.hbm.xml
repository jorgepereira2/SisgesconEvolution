<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Marinha.Business.AutorizacaoCompra,Marinha.Business" table="TB_AutorizacaoCompra" lazy="true">

		<id name="ID" column="ID_AutorizacaoCompra" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>
		<many-to-one name="Servidor" column="ID_Servidor" class="Marinha.Business.Servidor,Marinha.Business" />
		<many-to-one name="Fornecedor" column="ID_Fornecedor" class="Marinha.Business.Fornecedor,Marinha.Business" />
		<property column="DataEmissao" type="DateTime" name="DataEmissao" not-null="true" />
		<many-to-one name="Status" column="ID_StatusAutorizacaoCompra" class="Marinha.Business.StatusAutorizacaoCompra,Marinha.Business" />		
		<many-to-one name="Licitacao" column="ID_Licitacao" class="Marinha.Business.Licitacao,Marinha.Business" />
		<many-to-one name="Projeto" column="ID_Projeto" class="Marinha.Business.Projeto,Marinha.Business" />
		<property column="Observacao" type="String" name="Observacao" length="500" />
    <property column="FlagRequerAprovacaoConselhoEconomico" type="Boolean" name="FlagRequerAprovacaoConselhoEconomico" />
    <property column="FlagPago" type="Boolean" name="FlagPago" />
    <property column="FlagEmitida" type="Boolean" name="FlagEmitida" />
    <property column="NumeroEmpenho" type="String" name="NumeroEmpenho" />
    <property column="CodigoGestao" type="String" name="CodigoGestao" />
    <property column="Lista" type="String" name="Lista" />
    <property column="NumeroLancamento" type="String" name="NumeroLancamento" />
    <property column="OrdemBancaria" type="String" name="OrdemBancaria" />
    <property column="Numero" type="Int32" name="Numero" />

    <many-to-one column="ID_NaturezaDespesa" name="NaturezaDespesa" class="Marinha.Business.NaturezaDespesa,Marinha.Business" />
    <many-to-one column="ID_FonteRecurso" name="FonteRecurso" class="Marinha.Business.FonteRecurso,Marinha.Business" />
	<many-to-one column="ID_PTRES" name="PTRES" class="Marinha.Business.PTRES,Marinha.Business" />
    
    <many-to-one column="ID_TipoCompra" name="TipoCompra" class="Marinha.Business.TipoCompra,Marinha.Business" />
    <many-to-one name="MotivoCancelamento" column="ID_MotivoCancelamento" class="Marinha.Business.MotivoCancelamento,Marinha.Business" />

        <bag name="Itens" table="TB_PedidoCotacaoItem" collection-type="Marinha.Business.CustomList`1[Marinha.Business.PedidoCotacaoItem],Marinha.Business" inverse="true" >
            <key column="ID_AutorizacaoCompra" />
            <one-to-many class="Marinha.Business.PedidoCotacaoItem,Marinha.Business" />
        </bag>

        <bag name="Pagamentos" table="TB_AutorizacaoCompraPagamento" collection-type="Marinha.Business.CustomList`1[Marinha.Business.AutorizacaoCompraPagamento],Marinha.Business" inverse="true" >
            <key column="ID_AutorizacaoCompra" />
            <one-to-many class="Marinha.Business.AutorizacaoCompraPagamento,Marinha.Business" />
        </bag>

        <bag name="Historico" table="TB_HistoricoAutorizacaoCompra" collection-type="Marinha.Business.CustomList`1[Marinha.Business.HistoricoAutorizacaoCompra],Marinha.Business" inverse="true" lazy="true" >
            <key column="ID_AutorizacaoCompra" />
            <one-to-many class="Marinha.Business.HistoricoAutorizacaoCompra,Marinha.Business" />
        </bag>
	</class>
</hibernate-mapping>
