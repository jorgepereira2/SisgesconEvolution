<%@ Page Language="C#" AutoEventWireup="true" CodeFile="fchPedidoAquisicao.aspx.cs" Inherits="fchPedidoAquisicao" %>
<%@ Import Namespace="Marinha.Business" %>
<%@ Register Src="~/UserControls/DadosOM.ascx" TagName="DadosOM" TagPrefix="uc" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" >
<head runat="server">
    <title>Untitled Page</title>
     <link href="../css/basicStyle.css" type="text/css" rel="stylesheet" />  
</head>
<body>
    <form id="form1" runat="server">
    <table cellpadding="2" style="border:solid 1px black; width:98%">
        <tr>
           
            <td align="center" >
                <uc:DadosOM runat="server" />
            </td>           
        </tr>        
    </table>
    <br />
    <div align="center">
     <b>Pedido de Aquisição</b>
     </div>
    <br /><br />
    <div class="PageTitle" style="width:98%;text-align:right;">
            Dados Básicos
        </div>  
        <table style="width:98%" cellpadding="2" cellspacing="3" class="TabelaRelatorio">
            <tr>
                <td align="left" valign="top"  >
                    <b>Número:
                    <%# _pedido.Numero %>
                    </b> 
                </td>
                 <td align="left" valign="top" >
                    <b>Data Emissão:</b> 
                    <%# _pedido.DataEmissao.ToShortDateString() %>
                </td>
            </tr>            
            <tr>
                <td align="left" valign="top"  >
                    <b>Divisão:</b> 
                    <%# _pedido.Celula.Descricao %>
                </td>
                 <td align="left" valign="top" >
                    <b>Status:
                    <%# _pedido.Status.Descricao %>
                    </b>
                </td>                
            </tr> 
             <tr>    
                <td align="left" valign="top" colspan="2" >
                    <b>Servidor:</b>
                    <%# _pedido.ServidorCadastro.Identificacao %>                     
                </td>               
            </tr>  
            <tr>
                <td align="left" valign="top"  >
                    <b>Tipo Pagamento:</b> 
                    <%# _pedido.TipoPagamento %>
                </td>                
                <td align="left" valign="top"  >
                    <b>Projeto:</b> 
                    <%# _pedido.Projeto %>
                </td>                
            </tr> 
            <tr>
                <td align="left" valign="top"  >
                    <b>Natureza Despesa:</b> 
                    <%# _pedido.NaturezaDespesa %>
                </td>                
                <td align="left" valign="top"  >
                    <b>Fonte Recurso:</b> 
                    <%# _pedido.FonteRecurso %>
                </td>                
            </tr>                     
            <tr>
                <td align="left" valign="top"  colspan="2" >
                    <b>Aplicação:</b> 
                    <%# _pedido.Aplicacao %>
                </td>
            </tr> 
            <tr>
                <td align="left" valign="top"  colspan="2" >
                    <b>Observação:</b> 
                    <%# _pedido.Observacao %>
                </td>
            </tr>
        </table>
        
           <br />
        
          <div class="PageTitle" style="width:98%;text-align:right;">
            Dados Fornecedor
        </div>  
        <table style="width:98%" cellpadding="2" cellspacing="3" class="TabelaRelatorio">
            <tr>
                <td align="left" valign="top" colspan="2"  >
                    <b>Razão Social: </b> 
                    <%# _pedido.Fornecedor.RazaoSocial %>
                   
                </td>                 
            </tr>            
            <tr>
                <td align="left" valign="top"  >
                    <b>CNPJ:</b> 
                    <%# _pedido.Fornecedor.CNPJ %>
                </td>
                 <td align="left" valign="top" >
                    <b>Tipo: </b>
                    <%# _pedido.Fornecedor.TipoFornecedor.Descricao %>
                   
                </td>                
            </tr> 
             <tr>    
                <td align="left" valign="top" colspan="2" >
                    <b>Endereço:</b>
                    <%# _pedido.Fornecedor.Endereco %>                     
                </td>               
            </tr>  
            <tr>
                <td align="left" valign="top"   >
                    <b>Telefone:</b> 
                    <%# _pedido.Fornecedor.Telefone %>
                </td>                
                <td align="left" valign="top"   >
                    <b>Fax:</b> 
                    <%# _pedido.Fornecedor.Fax %>
                </td>                
            </tr> 
            <tr>
                <td align="left" valign="top"   >
                    <b>E-mail:</b> 
                    <%# _pedido.Fornecedor.Email %>
                </td>                
                <td align="left" valign="top"   >
                    <b>Banco:</b> 
                    <%# _pedido.Fornecedor.NumeroBanco %>
                </td>                
            </tr> 
            <tr>
                <td align="left" valign="top"   >
                    <b>Agência:</b> 
                    <%# _pedido.Fornecedor.Agencia %>
                </td>                
                <td align="left" valign="top"   >
                    <b>CC:</b> 
                    <%# _pedido.Fornecedor.ContaCorrente %>
                </td>                
            </tr>            
        </table>
        
           <br />
        
        <br />
        <div class="PageTitle" style="width:98%;text-align:right;">
            Itens
        </div>  
       <anthem:DataGrid runat="server" ID="dgItem" Width="98%" CssClass="datagrid"
                 AutoGenerateColumns="false" CellPadding="3" ShowFooter="true" >
                <HeaderStyle CssClass="dgHeader" />                                    
                <ItemStyle CssClass="dgItem" />
                <AlternatingItemStyle CssClass="dgAlternatingItem" />
                <FooterStyle HorizontalAlign="Right" BackColor="#F4F4F4" />
                <Columns>
                    <asp:TemplateColumn HeaderText="Material" ItemStyle-HorizontalAlign="left">
                        <ItemTemplate>
                            <%# ((IPedidoAquisicaoItem)Container.DataItem).DescricaoItem %>
                        </ItemTemplate>                                            
                    </asp:TemplateColumn>
                    <asp:TemplateColumn HeaderText="Quantidade" ItemStyle-HorizontalAlign="center">
                        <ItemTemplate>
                           <%# ((IPedidoAquisicaoItem)Container.DataItem).Quantidade %>
                        </ItemTemplate>                                            
                    </asp:TemplateColumn>
                     <asp:TemplateColumn HeaderText="Valor" ItemStyle-HorizontalAlign="right">
                        <ItemTemplate>
                           <%# ((IPedidoAquisicaoItem)Container.DataItem).Valor.ToString("N2") %>
                        </ItemTemplate>                                            
                    </asp:TemplateColumn>
                     <asp:TemplateColumn HeaderText="Valor2" ItemStyle-HorizontalAlign="right">
                        <ItemTemplate>
                           <%# ((PedidoAquisicaoItem)Container.DataItem).Valor2.HasValue ?  ((PedidoAquisicaoItem)Container.DataItem).Valor2.Value.ToString("N2") : "" %>
                        </ItemTemplate>                                            
                    </asp:TemplateColumn>
                     <asp:TemplateColumn HeaderText="Valor3" ItemStyle-HorizontalAlign="right">
                        <ItemTemplate>
                           <%# ((PedidoAquisicaoItem)Container.DataItem).Valor3.HasValue ?  ((PedidoAquisicaoItem)Container.DataItem).Valor3.Value.ToString("N2") : "" %>
                        </ItemTemplate>                                            
                    </asp:TemplateColumn>                   
                    <asp:TemplateColumn HeaderText="Valor Total" ItemStyle-HorizontalAlign="right">
                        <ItemTemplate>
                           <%# ((IPedidoAquisicaoItem)Container.DataItem).ValorTotal.ToString("C2") %>
                        </ItemTemplate>
                        <FooterTemplate>                                                
                            <b><%# _pedido.ValorTotal.ToString("C2") %></b>
                        </FooterTemplate>                                            
                    </asp:TemplateColumn>                                                                                                                      
                </Columns>
            </anthem:DataGrid>
            
             <br />
        
          <div class="PageTitle" style="width:98%;text-align:right;">
            Outros Fornecedores
        </div>  
        <table style="width:98%" cellpadding="2" cellspacing="3" class="TabelaRelatorio">
             <tr>
                <td align="left" valign="top" colspan="2"  >
                    <b>Fornecedor 2:</b> 
                    <%# _pedido.Fornecedor2 %>
                </td>                
            </tr> 
             <tr>
                <td align="left" valign="top" colspan="2"  >
                    <b>Fornecedor 3:</b> 
                    <%# _pedido.Fornecedor3 %>
                </td>                
            </tr>   
            </table>
            <br /> 
           
           <asp:Panel runat="server" ID="pnHistorico" Visible="false">
              <br />
            <div class="PageTitle" style="width:98%;text-align:right;">
                Histórico
            </div>  
           <anthem:DataGrid runat="server" ID="dgHistorico" Width="98%" CssClass="datagrid"
                 AutoGenerateColumns="false" CellPadding="3" >
                <HeaderStyle CssClass="dgHeader" />                                    
                <ItemStyle CssClass="dgItem" />
                <AlternatingItemStyle CssClass="dgAlternatingItem" />
                <FooterStyle CssClass="dgFooter" />
                <EditItemStyle HorizontalAlign="Center" />
                <Columns>
                    <asp:TemplateColumn HeaderText="Data" ItemStyle-HorizontalAlign="center">
                        <ItemTemplate>
                            <%# ((HistoricoPedidoAquisicao)Container.DataItem).Data.ToString("dd/MM/yyyy hh:mm") %>
                        </ItemTemplate>                                                                                  
                    </asp:TemplateColumn>                    
                     <asp:TemplateColumn HeaderText="Servidor" ItemStyle-HorizontalAlign="left">
                        <ItemTemplate>
                           <%# ((HistoricoPedidoAquisicao)Container.DataItem).Servidor.Identificacao %>
                        </ItemTemplate>                                            
                    </asp:TemplateColumn>
                    <asp:TemplateColumn HeaderText="Descrição" ItemStyle-HorizontalAlign="center">
                        <ItemTemplate>
                            <%# 
                                ((HistoricoPedidoAquisicao)Container.DataItem).StatusAnterior == null ? "" : 
                                ((HistoricoPedidoAquisicao)Container.DataItem).StatusAnterior.Descricao + " -> "%>  
                                <%# ((HistoricoPedidoAquisicao)Container.DataItem).StatusPosterior %>
                        </ItemTemplate>                                                                                  
                    </asp:TemplateColumn>
                </Columns>
            </anthem:DataGrid>      
          </asp:Panel>
    </form>
</body>
</html>
