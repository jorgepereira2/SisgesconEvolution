		function direciona(link, popup) 
		{
		    if(popup == 1)
		        window.open(link, 'popupmenu', 'menubar=yes,scrollbars=yes,resizable=yes,location=yes,directories=yes,status=yes, left=10, top=10, width=700, height=600');
		    else
		        top.myframe.location=link;
		}
		
        function iframeresize(height)
        {
            //CODIGO FUNCIONANDO PERFEITAMENTE NO NETSCAPE E MOZILLA
	        try
	        {
	            
	            var oFrame	=	document.getElementById('myframe');
	            	             
	             if(height) 
	             {
	                oFrame.height = height;
	                return;
	             }
	             
	             var oBody	=	oFrame.contentWindow.document.body;
            	
	            oFrame.height = oBody.scrollHeight;	            
	        }
	        //An error is raised if the IFrame domain != its container's domain
	        catch(e)
	        {
	            window.status =	'Error: ' + e.number + '; ' + e.description;
	        }
        }
        
       
        function expandiframe()
        {
            var iframe = document.getElementById('myframe');
            var newHeight; 
            if(document.all)
            {
                newHeight = (document.body.parentNode.clientHeight - document.getElementById('tbHeader').clientHeight) - 5;
                
            }
            else
                newHeight = (window.innerHeight - document.getElementById('tbHeader').clientHeight) - 5;
            
            //if(iframe.height < newHeight)
            {
                //iframe.contentWindow.document.body.style.height =  newHeight + "px";
                iframeresize(newHeight);
            }
        }
        
        function HideHeader()
        {
            var header = document.getElementById("divCabecalho");
            var link = document.getElementById("aHideHeader");
            var img = document.getElementById("imgHideHeader");
            var newImg;
            if(header.style.display == "none" )
            {
                header.style.display = "";            
                link.title = "Ocultar Cabeçalho";
                newImg = new Image();
                newImg.src = "images/hideheader.gif";            
            }
            else
            {
                header.style.display = "none";
                link.title = "Mostrar Cabeçalho";
                newImg = new Image();
                newImg.src = "images/showheader.gif";
            }
            img.src = newImg.src;
            
        }
		


        N = (document.all) ? 0 : 1;


        function CloseClick()
