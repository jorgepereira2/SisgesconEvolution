<%@ Application Language="C#" %>
<%@ Import Namespace="System.Threading" %>

<script runat="server">

    private Timer _timer;
    void Application_Start(object sender, EventArgs e) 
    {
        int segundos = 60;
        _timer = new Timer(new TimerCallback(_timer_Tick), null, 1000, segundos * 1000);  
        
    }

    private void _timer_Tick(object state)
    {
        ChatManager.UpdateCollection();
    }
    
    void Application_End(object sender, EventArgs e) 
    {
        //  Code that runs on application shutdown

    }
        
    void Application_Error(object sender, EventArgs e) 
    { 
        // Code that runs when an unhandled error occurs

    }

    void Session_Start(object sender, EventArgs e) 
    {
        // Code that runs when a new session is started

    }

    void Session_End(object sender, EventArgs e) 
    {
        // Code that runs when a session ends. 
        // Note: The Session_End event is raised only when the sessionstate mode
        // is set to InProc in the Web.config file. If session mode is set to StateServer 
        // or SQLServer, the event is not raised.

    }

    protected void Application_PreRequestHandlerExecute(object sender, EventArgs e)
    {
        if (this.Request.Cookies["Marinha"] != null && Request.IsAuthenticated)
        {
            int id_servidor = Convert.ToInt32(this.Request.Cookies["Marinha"]["ID_Servidor"]);
            ChatManager.UpdateUserStatus(id_servidor);
        }
    }
</script>
