body
{
  background-color:White; 
  font-family: verdana; 
  font-size:11px;
  color:#3F3F3F; 
}

.overlay{
	
	position:absolute;
	top:0;
	left:0;
	width:100%;
	height:100%;
	z-index:998;
	background-color:#999;
	-moz-opacity: 0.2;
	opacity:.20;
	filter: alpha(opacity=20);
}

a
{
  color:#0c4765;
  text-decoration:none;
}

a:hover
{
  color:#58b8ae;
  text-decoration:underline; 
}

.Error
{
	width: 100%;
	vertical-align: middle;
	text-align: center;
	font-weight: bold;
	color: red;
}

.Button
{
	background-image: url(../images/button2.gif);
	background-repeat:repeat-x;
	padding-right: 2px;
	padding-left: 2px;
	font-weight: normal;
	color: #0c4765;
	font-weight: bold;
	border-bottom: silver 1px solid;
	border-right: silver 1px solid;
	border-left: silver 1px solid;
	border-top: silver 1px solid;
	width: 85px;
	height: 20px;
}

.legenda
{		
	color: #DC5022;
	font-size:10px;
}

.PageTitle
{
	font-weight: bold;
	font-size: 11px;
	color: #0c4765;
	font-family: Verdana;	
	vertical-align:bottom;
	font-style:italic;
	letter-spacing:1px;
}

.ReportTitle
{
	font-weight: bold;
	font-size: 14px;
	color: #0c4765;
	font-family: Verdana;	
	vertical-align:bottom;	
	letter-spacing:2px;
}


.linkpadrao
{
	text-decoration:none;
	font-family:Verdana;
	color:#4345FE;	
}

.linkpadrao:hover
{
	text-decoration:none;
	font-family:Verdana;
	color:#4345FE;
}

.linkpadrao:visited
{
	text-decoration:none;
	font-family:Verdana;
	color:#4345FE;
}

.divisor
{
    vertical-align:text-top;
    
}

.PageFooter
{
 background-color:#EEEEEE; 
 width:100%; 
 border: solid 0px black; 
 border-top: solid 1px #C0C0C0; 
 border-bottom:  solid 1px #C0C0C0;   
}

.datagrid
{
    border: solid 1px black;
    color:Black;
    font-family: Verdana;
    font-size: 11px;
    letter-spacing: 1px;
}

.dgHeader
{
  background-color:#0c4765;
  color: #EEEEEE;
  font-weight:bold;
  border-bottom: solid 1px black;   
  text-align:center;
  text-decoration:none;
}

.dgHeader a
{
  background-color:#0c4765;
  color: #EEEEEE;
  font-weight:bold;
  border-bottom: solid 1px black;   
  text-align:center;  
  text-decoration:underline;
}

.dgAlternatingItem
{
    background-color:#FAF9FA;
}


.dgHover
{
    background-color:#D3FFEB;
}

.dgFooter
{
    background-color:#EEEEEE;
}

.label
{
    font-weight:bold;
}

.msgErro
{
    font-weight:bold;
    color:Red;
    font-size:12px;
}
       
.BigTitle
{
	font-weight: bold;
	font-size: 13px;
	color: #0c4765;
	font-family: Verdana;		
	letter-spacing:1px;
}

.numerico
{
    text-align:right;
}

.labelesquerdo
{
    color:#0B4157;
}

.TabelaRelatorio
{
    border: solid 1px black;
}

@media print{
    .ReportTitle
    {
	    font-weight: bold;
	    font-size: 14px;
	    color: #000000;
	    font-family: Verdana;	
	    vertical-align:bottom;	
	    letter-spacing:2px;
    }
     
     .noprint { display: none; }
     
    .dgHeader a
    {
      background-color:#0c4765;
      color: #EEEEEE;
      font-weight:bold;
      border-bottom: solid 0px black;   
      text-align:center;  
      text-decoration:none;
    }
}

a.detalhe
{
  position:relative;   
  padding:0;      
  z-index:24;
 text-decoration:none;
}
a.detalhe:hover
{
	background:transparent;	
	z-index:25; 
	
}

a.detalhe span{display: none}
a.detalhe:hover span
{ 
	display:block;
	position:absolute;
	width:325px; 
	top:-2em;	
	text-decoration:none;
	text-align:justify;
	vertical-align:middle;
	right:4em;
	font: 11px arial, verdana, helvetica, sans-serif; 
	padding:0px 0px;
	border: 1px solid #999;
	background:#FFFFCC; 
	color:#000;
}
